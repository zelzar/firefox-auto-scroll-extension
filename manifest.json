{
  "manifest_version": 2,
  "name": "Auto Scroll using speed",
  "version": "1.0",
  "description": "Auto scroll the page at a specified speed.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

